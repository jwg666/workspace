<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="manage" namespace="/manage" extends="cms">
		<action name="manage_*" method="{1}" class="cn.gov.qdds.common.action.ManageAction">
			<result type="freemarker">/manage/s.{1}.html</result>
			<result name="kf_list" type="redirect">/manage/kf_list.act</result>
			<result name="login" type="redirect">/mlogin</result>
		</action>
		<action name="note!*" method="{1}" class="com.neusoft.qdds.action.ManageNoteAction">
			<result name="show" type="freemarker">/manage/note_{1}.html</result>
			<result type="json" name="edit">
				<param name="root">json</param>
				<param name="excludeProperties"></param>
			</result>
			<result type="json" name="datagrid">
				<param name="root">datagrid</param>
				<param name="excludeProperties"></param> 
			</result>
		</action> 
		<action name="pic!*" method="{1}" class="com.neusoft.qdds.action.ManagePicAction">
			<param name="allowTypes">
		    	image/pjpeg,image/bmp,image/jpg,image/png,image/gif,image/jpeg
		   </param>
			<result name="show" type="freemarker">/manage/pic_{1}.html</result>
			<result type="json" name="upload">
				<param name="root">json</param>
				<param name="excludeProperties"></param>
			</result>
			<result type="json" name="edit">
				<param name="root">json</param>
				<param name="excludeProperties"></param>
			</result>
			<result type="json" name="datagrid">
				<param name="root">datagrid</param>
				<param name="excludeProperties"></param> 
			</result>
		</action> 
	</package>
</struts>
