<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="layout" namespace="/layout" extends="cms">
	    <result-types>
			<result-type name="json"  class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<action name="*" method="{1}" class="cn.gov.qdds.common.action.LayoutAction">
			<result type="freemarker">/layout/s.{1}.html</result>
			<result name="manage" type="redirect">/manage</result>
			<result name="login" type="redirect">/mlogin</result>
			<result type="json" name="messageList">
				<param name="root">json</param>
			</result>
		</action>
	</package>
	<package name="client" namespace="/client" extends="cms">
	    <result-types>
			<result-type name="json"  class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<action name="*" method="{1}" class="cn.gov.qdds.common.action.ClientAction">
			<result type="freemarker">/manage/client/s.{1}.html</result>
			<result type="json" name="messageList">
				<param name="root">json</param>
			</result>
			<result type="json" name="wangyouList">
				<param name="root">json</param>
			</result>
		</action>
	</package>
</struts>
